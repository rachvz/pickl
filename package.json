{
  "name": "pickl",
  "version": "0.1.0",
  "type": "module",
  "description": "A boilerplate project that integrates Playwright with Cucumber/Gherkin for BDD test automation",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('test-results', {recursive: true, force: true})\"",
    "clean:all": "tsx scripts/cleanup.ts",
    "pretest": "npm run validate:env",
    "test": "node scripts/run-test.ts",
    "test:debug": "tsx --import dotenv/config --enable-source-maps node_modules/@cucumber/cucumber/bin/cucumber.js --import test/support/**/*.ts --import test/steps/**/*.ts --format ./test/support/verbose-formatter.ts",
    "test:chromium": "cross-env BROWSER=chromium npm test",
    "test:firefox": "cross-env BROWSER=firefox npm test",
    "test:webkit": "cross-env BROWSER=webkit npm test",
    "test:smoke": "cross-env TAGS=@smoke npm test",
    "test:regression": "cross-env TAGS=@regression npm test",
    "test:clean": "npm run clean && npm run test",
    "test:coverage": "cross-env TAGS=\"\" c8 npm test",
    "coverage:check": "c8 check-coverage",
    "report": "node scripts/generate-report.ts",
    "report:pr": "tsx scripts/generate-pr-comment.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "validate:env": "tsx scripts/validate-env.ts",
    "verify:hooks": "sh scripts/verify-hooks.sh",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "testing",
    "automation",
    "gherkin"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "author": "Jed Aureus Gonzales",
  "license": "MIT",
  "overrides": {
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@playwright/test": "^1.57.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.9",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "cucumber-html-reporter": "^7.2.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
